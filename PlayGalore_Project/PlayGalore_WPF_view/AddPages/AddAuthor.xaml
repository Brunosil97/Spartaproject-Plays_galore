<Window x:Class="PlayGalore_WPF_view.AddPages.AddAuthor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlayGalore_WPF_view.AddPages"
        mc:Ignorable="d"
        Title="AddAuthor" Height="250" Width="600">
    <Grid Background="Gray">
        <Label Content="First Name:" HorizontalAlignment="Left" Margin="83,63,0,0" VerticalAlignment="Top"/>
        <Label Content="Surname:" HorizontalAlignment="Left" Margin="344,63,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="firstName" HorizontalAlignment="Left" Margin="83,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="159" Height="23"/>
        <TextBox x:Name="lastName" HorizontalAlignment="Left" Margin="344,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="168" Height="23"/>
        <Button Content="Save" HorizontalAlignment="Center" Margin="0,164,0,0" VerticalAlignment="Top" Width="122" Height="32" Click="Button_Click"/>

    </Grid>
</Window>
